<p>{{prompt}}</p>

<div class="form-group">
    <label for="{{rootId}}-quantity">{{localize "PF2E.QuantityLabel"}}</label>
    <div class="form-fields">
        <range-picker id="{{rootId}}-quantity" name="quantity" value="{{quantity}}"
                      min="1" max="{{item.quantity}}" step="1"></range-picker>
    </div>
</div>

{{#if lockStack}}
    <input type="hidden" name="newStack" value="true" data-dtype="Boolean" />
{{else if (ne action "gift")}}
    <div class="form-group">
        <label for="{{rootId}}-newStack">{{localize "PF2E.loot.Stack"}}</label>
        <div class="form-fields">
            <input type="checkbox" id="{{rootId}}-newStack" name="newStack" {{checked newStack}} />
        </div>
    </div>
{{/if}}
